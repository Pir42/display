<div class="container">
  <h1 class="title-3">Chants</h1>
</div>

<div data-behavior="vue" data-songs="<%= @songs.to_json %>">
  <div class="container actions__header">
    <div class="search">
      <input type="text" v-model="filter" placeholder='Recherche par titre/artiste &#xe96e;' class="search__input">
    </div>
    <div class="actions__links">
      <div class="cta-default">
        <%= link_to "Ajouter", new_song_path %>
      </div>
    </div>
  </div>
  <table>
    <thead>
      <tr>
        <th>Titre</th>
        <th>Artiste</th>
        <th>Dur√©e</th>
      </tr>
    </thead>
    <tbody>
      <template v-for="(song, i) in filtered_songs">
        <tr :key="i">
          <td>{{ song.title }}</td>
          <td>{{ song.artist }}</td>
          <td>{{ song.duration }}</td>
          <td><a v-bind:href="url(song)">Modifier</a></td>
        </tr>
        <tr class="separator"></tr>
      </template>
    </tbody>
  </table>
</div>

<%= javascript_pack_tag 'songs' %>
