<%= form_for @song do |f| %>
  <%= render "songs/shared/form", f: f %>

  <h5>Structure</h5>

  <div data-behavior="vue" data-chords="<%= @song.chords %>">
    <app v-bind:chords="chords" v-on:section_change="filter_sections"></app>
    <input type="hidden" name="song[chords]" v-bind:value="JSON.stringify(chords)">
  </div>


  <%= f.submit "Enregistrer" %>
<% end %>



<%= javascript_pack_tag 'song' %>