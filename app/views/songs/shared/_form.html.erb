<div class="row middle-xs">
  <div class="col-xs-6 col-md-8">
    <div class="field">
      <%= f.label :title, "Titre*" %>
      <%= f.text_field :title, placeholder: "Titre", required: true, class: "subtitle-1" %>
    </div>
  </div>

  <div class="col-xs-6 col-md-4 end-xs">
    <% if f.object.persisted? %>
      <%= link_to "Supprimer", song_path(f.object), method: :delete, class: "mr-2 delete" if f.object.setlists.empty? %>
    <% end %>
    <%= f.submit "Enregistrer" %>
  </div>
</div>
<div class="row">
  <div class="mr-2">
    <div class="field">
    <%= f.label :artist, "Artiste" %>
    <%= f.text_field :artist, placeholder: "Artiste" %>
    </div>
  </div>
  <div class="mr-2">
    <div class="field">
      <%= f.label :duration_formated, "Durée" %>
      <%= f.text_field :duration_formated, placeholder: "Durée" %>
    </div>    
  </div>
  <div class="mr-2">
    <div class="field">
      <%= f.label :bpm, "BPM" %>
      <%= f.text_field :bpm, placeholder: "BPM" %>
    </div>    
  </div>
</div>